{% if paginate.pages > 0 %}
  <nav role="navigation" class="flex justify-center items-center my-12">
    <div class="flex items-center space-x-3">
      {% if paginate.previous %}
        <a
          href="{{ paginate.previous.url }}"
          class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white rounded-md font-medium px-4 py-2"
        >
          {{ paginate.previous.title }}
        </a>
      {% endif %}

      {% for part in paginate.parts %}
        {% if part.is_link %}
          <a
            href="{{ part.url }}"
            class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white rounded-md font-medium px-4 py-2"
          >
            {{- part.title -}}
          </a>
        {% else %}
          <span class="border border-gray-600 text-white bg-gray-600 rounded-md font-medium px-4 py-2">
            {{ part.title }}
          </span>
        {% endif %}
      {% endfor %}

      {% if paginate.next %}
        <a
          href="{{ paginate.next.url }}"
          class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white rounded-md font-medium px-4 py-2"
        >
          {{- paginate.next.title -}}
        </a>
      {% endif %}
    </div>
  </nav>
{% endif %}
