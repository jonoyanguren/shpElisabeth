{% paginate blog.articles by 5 %}
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8 text-center">{{ blog.title }}</h1>

    <div class="max-w-3xl mx-auto space-y-8">
      {% for article in blog.articles %}
        <article class="border rounded-lg p-6 shadow-sm hover:shadow-md transition-all">
          <h2 class="text-2xl font-semibold mb-3">
            <a href="{{ article.url }}" class="hover:text-primary transition-colors">
              {{ article.title }}
            </a>
          </h2>

          <div class="text-sm text-gray-600 mb-4">
            {% if article.author %}
              <span>{{ article.author }}</span>
              <span class="mx-2">•</span>
            {% endif %}
            <time datetime="{{ article.created_at | date: '%Y-%m-%d' }}">
              {{ article.created_at | date: '%B %d, %Y' }}
            </time>
          </div>

          <div class="prose max-w-none">
            {% if article.excerpt.size > 0 %}
              {{ article.excerpt }}
            {% else %}
              <p>{{ article.content | strip_html | truncatewords: 100 }}</p>
            {% endif %}
          </div>

          <a href="{{ article.url }}" class="inline-block mt-4 text-primary hover:underline"> Read more → </a>
        </article>
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      <div class="mt-8 flex justify-center">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}
  </div>
{% endpaginate %}
